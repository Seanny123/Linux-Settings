[user]
	name = Sean Aubin
	email = saubin@uwaterloo.ca
[color]
	branch = auto
	diff = auto
	interactive = auto
	pager = true
	status = auto
	ui = auto
[color "branch"]
	current = green bold
	local = green
	remote = red bold
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red
[core]
	autocrlf = input
	editor = nano
	whitespace = cr-at-eol
[branch]
	autosetuprebase = always
[alias]
	wdiff = diff --color-words
	co = checkout
	ds = diff --staged
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	ls = ls-files
	sh = show --stat
	showtrackedignored = ls-files -i --exclude-standard
	st = status -sb
